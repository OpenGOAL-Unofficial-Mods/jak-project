(deftype remote-player-info (structure)
 ((trans_x    float)
  (trans_y    float)
  (trans_z    float)
  (color_r    float)
  (color_g    float)
  (color_b    float)
  )
  :size-assert 24
  )

(deftype remote-player-list (structure)
 ((players    remote-player-info 3)
  )
 (:methods
  (new (symbol type int) _type_ 0)
  )
  :size-assert 12
  )